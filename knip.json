{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "client": {
      "entry": ["src/app/routes/**/*.tsx", "src/**/*.stories.tsx"],
      "project": ["src/**/*.{ts,tsx}"],
      "ignoreDependencies": [
        "@vitest/coverage-v8",
        "chromatic",
        "tailwindcss",
        "class-variance-authority",
        "clsx",
        "lucide-react",
        "recharts",
        "sonner",
        "tailwind-merge"
      ],
      "ignore": ["src/utils/cn.ts", "src/utils/colors.ts"]
    },
    "api": {
      "entry": ["functions/*/index.ts"],
      "project": ["**/*.ts"],
      "ignoreBinaries": ["func"]
    }
  },
  "ignore": ["**/build/**", "**/dist/**", "**/.storybook/**", "**/mocks/**"],
  "ignoreDependencies": [
    "@typescript-eslint/eslint-plugin",
    "eslint-config-prettier",
    "husky"
  ],
  "ignoreExportsUsedInFile": true
}
