{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "client": {
      "entry": ["src/app/routes/**/*.tsx", "src/**/*.stories.tsx"],
      "project": ["src/**/*.{ts,tsx}"],
      "ignoreDependencies": [
        "@vitest/coverage-v8",
        "chromatic",
        "tailwindcss",
        "tw-animate-css"
      ],
      "ignore": ["src/components/ui/*.tsx"]
    },
    "api": {
      "entry": ["functions/*/index.ts", "scripts/migrate.ts", "scripts/migrate-local-test.ts"],
      "project": ["**/*.ts"],
      "ignoreBinaries": ["func"],
      "ignore": ["utils/defaultCategories.ts"]
    }
  },
  "ignore": ["**/build/**", "**/dist/**", "**/.storybook/**", "**/mocks/**"],
  "ignoreDependencies": [
    "@typescript-eslint/eslint-plugin",
    "eslint-config-prettier",
    "husky"
  ],
  "ignoreExportsUsedInFile": true
}
