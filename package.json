{
  "name": "Activity-tracker",
  "version": "1.0.0",
  "private": true,
  "description": "Repository containing api and client for activity tracker app",
  "repository": "https://github.com/sjwilczynski/Activity-tracker.git",
  "license": "MIT",
  "author": "sjwilczynski <sjwilczynski@gmail.com>",
  "type": "module",
  "workspaces": [
    "client",
    "api"
  ],
  "scripts": {
    "clean": "rm -rf node_modules client/node_modules api/node_modules",
    "depcheck": "bun scripts/depcheck.mjs",
    "dev": "bun run --filter '*' start",
    "lint": "eslint --max-warnings=0",
    "pre-commit": "lint-staged --allow-empty"
  },
  "lint-staged": {
    "./**/*.{ts,tsx}": [
      "eslint --max-warnings=0"
    ],
    "*": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "8.52.0",
    "@typescript-eslint/parser": "8.52.0",
    "bundlewatch": "0.4.1",
    "depcheck": "1.4.7",
    "eslint": "9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.0.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "prettier": "^3.7.4",
    "prettier-plugin-packagejson": "^2.5.20",
    "source-map-explorer": "2.5.3",
    "typescript": "5.9.3"
  },
  "engines": {
    "bun": ">=1.2.0",
    "node": ">=22.18.0"
  },
  "bundlewatch": {
    "trackBranches": [
      "master"
    ],
    "files": [
      {
        "path": "client/build/assets/*.js",
        "maxSize": "500kB"
      }
    ]
  }
}
