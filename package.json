{
  "name": "Activity-tracker",
  "version": "1.0.0",
  "private": true,
  "description": "Repository containing api and client for activity tracker app",
  "repository": "https://github.com/sjwilczynski/Activity-tracker.git",
  "license": "MIT",
  "author": "sjwilczynski <sjwilczynski@gmail.com>",
  "type": "module",
  "workspaces": [
    "client",
    "api"
  ],
  "scripts": {
    "clean": "rm -rf node_modules client/node_modules api/node_modules",
    "depcheck": "bun scripts/depcheck.mjs",
    "lint": "eslint ./**/*.{ts,tsx,js} --max-warnings=0",
    "pre-commit": "lint-staged --allow-empty"
  },
  "lint-staged": {
    "./**/*.{ts,tsx,js}": [
      "eslint --max-warnings=0"
    ],
    "*": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.33.1",
    "@typescript-eslint/parser": "5.33.1",
    "bundlewatch": "0.4.1",
    "depcheck": "1.4.7",
    "eslint": "8.22.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "prettier": "^3.5.3",
    "prettier-plugin-packagejson": "^2.5.10",
    "source-map-explorer": "2.5.2",
    "typescript": "5.8.3"
  },
  "engines": {
    "bun": ">=1.2.0"
  },
  "bundlewatch": {
    "files": [
      {
        "path": "client/build/assets/*.js",
        "maxSize": "500kB"
      }
    ]
  }
}
