{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "allowJs": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "node", "@react-router/node"],
    "rootDirs": [".", ".react-router/types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", ".react-router/types/**/*"],
  "exclude": ["node_modules", "build", "storybook-static"]
}
